<div class="container text-center">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= link_to "Nouvelle tache", new_task_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
<% @tasks.each do |task| %>
  <h2><%= link_to task.name, task_path(task) %></h2>
  <p><%= task.description %></p>
<% end %>
